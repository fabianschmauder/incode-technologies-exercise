{
  "name": "infrastructure",
  "version": "0.1.0",
  "bin": {
    "infrastructure": "bin/infrastructure.js"
  },
  "scripts": {
    "build": "tsc",
    "watch": "tsc -w",
    "cdk": "cdk",
    "deploy": "cdk bootstrap && cdk deploy --require-approval never -c IMAGE_TAG=$IMAGE_TAG --force",
    "destroy": "cdk bootstrap && cdk destroy -f",
    "get-lb-url": "cdk output InfrastructureStack.LoadBalancerURL"
  },
  "devDependencies": {
    "@types/node": "22.7.9",
    "aws-cdk": "2.177.0",
    "ts-node": "^10.9.2",
    "typescript": "~5.6.3"
  },
  "dependencies": {
    "aws-cdk-lib": "2.177.0",
    "constructs": "^10.0.0"
  }
}
